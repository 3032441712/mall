<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dragon.mall.dao.GoodsMapper">
    <select id="selectDemo" resultType="map">
        SELECT * FROM ecs_goods WHERE goods_id = #{goodsId}
    </select>

    <select id="selectGoodsInfo" resultType="map">
        SELECT goods_id, goods_name, goods_sn FROM ecs_goods WHERE goods_id = #{goodsId}
    </select>
</mapper>